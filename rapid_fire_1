<button id="nextBtn">Следующий вопрос</button>

<script>
  const questions = [
    "Любимый эмодзи?",
    "Кофе или чай?",
    "Пицца или паста?",
    "Как тебя зовут друзья?",
    "Самое странное, что ты ел?",
    "Любимый мем?",
    "Что на тебе прямо сейчас?",
    "Какой цвет на вкус как ты?",
    "Следующий отпуск — где?",
    "Чем бы ты занялся, если бы не было интернета?",
    "Что сегодня будет смешным?",
    "Что ты делаешь первым делом утром?",
    "Шершавый или гладкий?",
    "Needle или haystack?",
    "Случайная привычка, которую ты любишь?",
    "Самый странный комплимент, который ты получал?",
    "Что бы ты никогда не надел?",
    "Если бы ты был напитком — каким?",
    "Любимый запах?",
    "Что в тебе вызывает гордость?",
    "Какой твой любимый способ расслабиться?",
    "Что тебя всегда развеселит?",
    "Если бы у тебя был питомец любой фантастический зверь, кто бы это был?",
    "Какой звук тебе нравится больше всего?",
    "Любимая настольная игра?",
    "Что ты умеешь делать лучше всех?",
    "Что ты бы сделал, если бы выиграл миллион?",
    "Какой твой любимый праздник?",
    "Какую книгу ты можешь читать снова и снова?",
    "Куда бы ты отправился в путешествие мечты?"
  ];

  let shuffled = [];
  let index = 0;

  function shuffle(array) {
    let arr = array.slice();
    for(let i = arr.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [arr[i], arr[j]] = [arr[j], arr[i]];
    }
    return arr;
  }

  function showQuestion() {
    if(index >= shuffled.length) {
      shuffled = shuffle(questions);
      index = 0;
    }
    document.getElementById('question').textContent = shuffled[index];
    index++;
  }

  document.getElementById('nextBtn').addEventListener('click', showQuestion);

  // Инициализация
  shuffled = shuffle(questions);
  showQuestion();
</script>
